# Environment variables for LangChain/LangGraph Agents
# Copy this file to .env and fill in your values

# LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
LLM_MODEL=claude-3-sonnet-20240229
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# Prometheus Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_AUTH_TOKEN=  # Optional Bearer token

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=  # Optional AWS profile name
AWS_ACCESS_KEY_ID=  # Optional if using profile
AWS_SECRET_ACCESS_KEY=  # Optional if using profile

# Terraform Configuration
TERRAFORM_DIR=./terraform

# Security Configuration
AGENT_SECRET_KEY=your-secret-key-for-audit-logging
ENABLE_AUDIT_LOGGING=true
MAX_RETRY_ATTEMPTS=3
COMMAND_TIMEOUT=300

# Optional: Alert Configuration
ALERT_WEBHOOK_URL=  # Webhook for sending alerts